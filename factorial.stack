{-- Factorial implementation in BPROG --}

{-- Recursive implementation of factorial --}
factorial {
  dup 0 == if
  { pop 1 }
  { dup 1 - factorial * }
} fun

{-- Print factorials from 0 to 10 --}
" Factorial calculator " println
" =================== " println
" " println

0 loop { dup 11 > } {
  dup " Factorial of " write
  dup write
  " is " write
  dup factorial println
  1 +
}